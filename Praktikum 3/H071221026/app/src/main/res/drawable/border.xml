<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Gradient Background -->
    <gradient
        android:startColor="#FF0048"
        android:centerColor="#876F27"
        android:endColor="#C800FF"
        android:type="linear"
        android:angle="45"/>

    <!-- Border Color -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Padding -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
