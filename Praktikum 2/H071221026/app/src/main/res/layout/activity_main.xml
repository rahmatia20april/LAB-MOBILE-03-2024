<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C27B0"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Tugas Praktikum Intent"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/fotoAwal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:contentDescription="apa"/>
<!--            android:background="@drawable/baseline_add_photo_alternate_24"/>-->

        <EditText
            android:id="@+id/InputName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nama"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/UsernameName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/tombolAwal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#673AB7"
            android:fontFamily="sans-serif-black"
            android:text="SUBMIT"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </LinearLayout>
</ScrollView>